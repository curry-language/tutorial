% use this environment for program text containing \userinput
\newenvironment{prog}%
  {\par\vspace{2ex}\setlength{\parindent}{2ex}%
   \parskip=0ex\obeylines\@vobeyspaces\small\codefont}%
  {\par\vspace{2ex}\noindent\kern-.3em}
